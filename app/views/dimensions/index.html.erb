<h1 class="text-center">Listing Dimensions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Width</th>
      <th>Height</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dimensions.each do |dimension| %>
      <tr>
        <td><%= trim(dimension.width) %></td>
        <td><%= trim(dimension.height) %></td>
        <td><%= link_to 'Edit', edit_dimension_path(dimension) %></td>
        <td><%= link_to 'Destroy', dimension, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add New Dimension', new_dimension_path, class: "btn btn-primary btn-block" %>
