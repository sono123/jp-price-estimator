<h1 class="text-center">Listing Coatings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Front</th>
      <th>Back</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coatings.each do |coating| %>
      <tr>
        <td><%= coating.front %></td>
        <td><%= coating.back %></td>
        <% if coating.id == 1 %>
          <td class="gray-out">Edit</td>
          <td class="gray-out">Destroy</td>
        <% else %>
          <td><%= link_to 'Edit', edit_coating_path(coating) %></td>
          <td><%= link_to 'Destroy', coating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add New Coating', new_coating_path, class: "btn btn-primary btn-block" %>
